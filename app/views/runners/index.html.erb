<h1>Listing runners</h1>

<table>
  <tr>
    <th>Poster</th>
    <th>Message</th>
    <th>Task</th>
    <th>Skills</th>
    <th>Background</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @runners.each do |runner| %>
  <tr>
    <td><%= runner.poster_id %></td>
    <td><%= runner.message_id %></td>
    <td><%= runner.task_id %></td>
    <td><%= runner.skills %></td>
    <td><%= runner.background %></td>
    <td><%= link_to 'Show', runner %></td>
    <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
    <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

